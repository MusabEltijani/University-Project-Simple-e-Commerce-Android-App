<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".ui.MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle">
        <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView android:layout_width="116dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/fridge"
                       android:layout_marginStart="12dp"
                       android:layout_marginTop="6dp"
                       android:layout_marginBottom="6dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SumSang Smart Fridge"
                            android:textSize="25sp"/>
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 1000€"
                            android:textSize="20sp"/>

                <ImageButton
                             android:onClick="addBasket"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:background="@drawable/ic_add_basket"
                             android:layout_marginStart="220dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView android:layout_width="116dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/smartphone"
                       android:layout_marginStart="12dp"
                       android:layout_marginTop="6dp"
                       android:layout_marginBottom="6dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019 8 core proccecor"
                            android:textSize="25sp"/>
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 800€"
                            android:textSize="20sp"/>

                <ImageButton
                        android:onClick="addBasket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_add_basket"
                        android:layout_marginStart="220dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView android:layout_width="116dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/book"
                       android:layout_marginStart="12dp"
                       android:layout_marginTop="6dp"
                       android:layout_marginBottom="6dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Import java.extra.cd"
                            android:textSize="25sp"/>
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 55.40€"
                            android:textSize="20sp"/>

                <ImageButton
                            android:onClick="addBasket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_add_basket"
                            android:layout_marginStart="220dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView android:layout_width="116dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/chip"
                       android:layout_marginStart="12dp"
                       android:layout_marginTop="6dp"
                       android:layout_marginBottom="6dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Antique Mips Chip"
                            android:textSize="25sp"/>
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 0.05€"
                            android:textSize="20sp"/>

                <ImageButton
                        android:onClick="addBasket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_add_basket"
                        android:layout_marginStart="220dp"/>

            </LinearLayout>
        </LinearLayout>






    </LinearLayout>
</android.support.constraint.ConstraintLayout>