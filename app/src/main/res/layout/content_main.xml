<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".ui.MainActivity">
    <LinearLayout
            android:id="@+id/outterLinearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle">
        <LinearLayout
                android:id="@+id/linearLayout0"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView android:layout_width="116dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/fridge"
                       android:layout_marginStart="12dp"
                       android:layout_marginTop="6dp"
                       android:layout_marginBottom="6dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="SumSang Fridge"
                          android:textSize="25sp"
                          android:fontFamily="@font/roboto_bold"/>
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 600€"
                            android:textSize="20sp"
                            android:fontFamily="@font/roboto_light"/>

                <ImageButton
                             android:tag="0"
                             android:onClick="addBasket"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:background="@drawable/ic_add_basket"
                             android:layout_marginStart="220dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView android:layout_width="116dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/smartphone"
                       android:layout_marginStart="12dp"
                       android:layout_marginTop="6dp"
                       android:layout_marginBottom="6dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019 8 core android"
                            android:textSize="25sp"
                            android:fontFamily="@font/roboto_bold"/>
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 800€"
                            android:textSize="20sp"
                            android:fontFamily="@font/roboto_light"/>

                <ImageButton
                        android:tag="1"
                        android:onClick="addBasket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_add_basket"
                        android:layout_marginStart="220dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView android:layout_width="116dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/book"
                       android:layout_marginStart="12dp"
                       android:layout_marginTop="6dp"
                       android:layout_marginBottom="6dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Import java.extra.cd"
                            android:textSize="25sp"
                            android:fontFamily="@font/roboto_bold"/>
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 55.40€"
                            android:textSize="20sp"
                            android:fontFamily="@font/roboto_light"/>

                <ImageButton
                            android:tag="2"
                            android:onClick="addBasket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_add_basket"
                            android:layout_marginStart="220dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView android:layout_width="116dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/chip"
                       android:layout_marginStart="12dp"
                       android:layout_marginTop="6dp"
                       android:layout_marginBottom="6dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Antique Mips Chip"
                            android:textSize="25sp"
                            android:fontFamily="@font/roboto_bold"/>
                <TextView   android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 0.05€"
                            android:textSize="20sp"
                            android:fontFamily="@font/roboto_light"/>

                <ImageButton
                        android:tag="3"
                        android:onClick="addBasket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_add_basket"
                        android:layout_marginStart="220dp"/>

            </LinearLayout>
        </LinearLayout>






    </LinearLayout>
</android.support.constraint.ConstraintLayout>