<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.koioannis.javacourse_eshop">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_logo_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.InvoiceActivity"
                  android:label="@string/title_activity_tool_bar"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ui.PaymentActivity"
                android:label="@string/title_activity_payment"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ui.CheckoutActivity"
                android:label="@string/title_activity_checkout"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ui.MainActivity"
                android:label="@string/title_activity_main"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>